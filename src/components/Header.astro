---
const navItems = [
  { name: "Accueil", href: "/" },
  { name: "Services", href: "/services" },
  { name: "Portfolio", href: "/portfolio" },
  { name: "À propos", href: "/about" },
  { name: "Contact", href: "/contact" },
];
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-base-100/80 border-b border-base-300">
  <div class="container mx-auto px-3 sm:px-4">
    <div class="navbar py-2 sm:py-3">
      <!-- Début navbar -->
      <div class="navbar-start">
        <!-- Menu mobile -->
        <div class="dropdown">
          <label tabindex="0" class="btn btn-ghost btn-circle lg:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
            </svg>
          </label>
          <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
            {navItems.map(item => (
              <li><a href={item.href}>{item.name}</a></li>
            ))}
          </ul>
        </div>
        
        <!-- Logo - Taille responsive -->
        <a class="btn btn-ghost p-1 sm:p-2" href="/">
          <span class="text-lg sm:text-xl font-bold text-primary">BKS</span>
          <span class="text-lg sm:text-xl font-light hidden sm:inline">Concept</span>
          <span class="text-lg sm:text-xl font-light sm:hidden">Concept</span>
        </a>
      </div>
      
      <!-- Menu desktop (centré) -->
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal gap-1">
          {navItems.map(item => (
            <li>
              <a 
                href={item.href} 
                class="px-3 py-2 text-sm lg:text-base hover:text-primary transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Bouton CTA - Responsive -->
      <div class="navbar-end">
        <a 
          href="/contact" 
          class="btn btn-primary btn-sm sm:btn-md rounded-full px-3 sm:px-6 text-xs sm:text-sm"
        >
          <span class="hidden xs:inline">Demander</span>
          <span class="xs:hidden">Devis</span>
        </a>
      </div>
    </div>
  </div>
</header>